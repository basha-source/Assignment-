def quick_sort(arr):
 if len(arr) <= 1:
 return arr
 else:
 pivot = arr[0]
 less_than_pivot = [x for x in arr[1:] if x <= pivot]
 greater_than_pivot = [x for x in arr[1:] if x > pivot]
 
 print(f"Pivot: {pivot}")
 print(f"Less: {less_than_pivot}")
 print(f"Greater: {greater_than_pivot}")
 
 sorted_less = quick_sort(less_than_pivot)
 sorted_greater = quick_sort(greater_than_pivot)
 
 combined_result = sorted_less + [pivot] + sorted_greater
 print(f"Combined: {combined_result}")
 return combined_result
